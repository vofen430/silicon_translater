{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Silicon Translator",
    "version": "0.1.0"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/tray.png",
      "iconAsTemplate": false
    },
    "windows": [
      {
        "label": "main",
        "title": "Silicon Translator",
        "width": 440,
        "height": 520,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "visible": false
      }
    ],
    "allowlist": {
      "all": false,
      "clipboard": { "all": true },
      "shell": { "open": true },
      "window": { "all": true }
    },
    "bundle": {
      "active": true,
      "targets": ["msi", "nsis"],
      "identifier": "com.silicon.translator",
      "icon": [
        "icons/icon.ico"
      ]
    }
  }
}
